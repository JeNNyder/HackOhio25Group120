{
  "name": "campus-bus-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:frontend": "npm --workspace frontend run dev",
    "dev:backend": "npm --workspace backend run api:local",
    "build": "npm --workspace frontend run build",
    "start": "npm --workspace frontend run start",
    "test": "npm --workspace backend run test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "openai": "^6.7.0"
  }
}
