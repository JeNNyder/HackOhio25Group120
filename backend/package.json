{
  "name": "backend",
  "version": "1.0.0",
  "description": "Serverless API (AWS SAM)",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "api:local": "sam build && sam local start-api --port 3001"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.917.0",
    "@aws-sdk/lib-dynamodb": "^3.917.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["<rootDir>/hello-world/tests/unit/**/*.test.js"],
    "clearMocks": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/.aws-sam/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/.aws-sam/"
    ]
  }
}
